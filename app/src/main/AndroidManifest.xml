<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dermobbbda.gymcoachbob"
    android:versionCode="1"
    android:versionName="1.0" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewExerciseActivity"
            android:label="@string/title_activity_add_exercise"
            android:windowSoftInputMode="stateVisible"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dermobbbda.gymcoachbob.MainActivity" />
        </activity>
        <activity
            android:name=".ViewExerciseActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dermobbbda.gymcoachbob.MainActivity" />
        </activity>
        <activity android:name=".NewWeightBasedSessionActivity"
            android:label="@string/title_activity_new_session"
            android:parentActivityName=".ViewExerciseActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dermobbbda.gymcoachbob.ViewExerciseActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
