<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/session_card_height"
    card_view:cardCornerRadius="@dimen/session_card_corner_radius"
    card_view:contentPaddingLeft="@dimen/activity_horizontal_margin"
    card_view:contentPaddingRight="@dimen/activity_horizontal_margin"
    card_view:cardElevation="@dimen/session_card_elevation"
    android:layout_margin="@dimen/session_card_layout_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="@dimen/session_card_date_width"
            android:layout_height="match_parent"
            android:id="@+id/session_date_textview" />

        <TextView
            android:layout_width="@dimen/session_card_number_width"
            android:layout_height="match_parent"
            android:id="@+id/session_number_textview"
            android:gravity="end"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_toRightOf="@id/session_date_textview"/>

        <TextView
            android:layout_width="@dimen/session_card_weight_width"
            android:layout_height="match_parent"
            android:id="@+id/session_weight_textview"
            android:gravity="end"
            android:layout_toRightOf="@id/session_number_textview"
            android:layout_marginLeft="@dimen/margin_small" />

        <TextView
            android:layout_width="@dimen/session_card_repetitions_width"
            android:layout_height="match_parent"
            android:id="@+id/session_repetitions_textview"
            android:gravity="end"
            android:layout_toRightOf="@id/session_weight_textview"
            android:layout_marginLeft="@dimen/margin_large" />
    </RelativeLayout>
</android.support.v7.widget.CardView>