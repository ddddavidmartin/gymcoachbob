<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="@dimen/exercise_card_corner_radius"
    android:layout_margin="@dimen/exercise_card_layout_margin"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/session_date_textview"
            android:layout_marginRight="@dimen/session_card_textview_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/session_repetitions_textview"
            android:layout_toRightOf="@id/session_date_textview"
            android:layout_marginRight="@dimen/session_card_textview_margin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/session_weight_textview"
            android:layout_toRightOf="@id/session_repetitions_textview"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>