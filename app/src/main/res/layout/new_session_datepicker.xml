<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_new_session_button_height"
        android:gravity="center_vertical"
        android:id="@+id/new_session_date_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_new_session_button_height"
        android:id="@+id/new_session_date_picker_button"
        android:text="@string/button_pick_date"
        android:onClick="showDatePickerDialog"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_toRightOf="@id/new_session_date_text" />
</merge>
