<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
card_view:cardCornerRadius="@dimen/exercise_card_corner_radius"
card_view:cardElevation="@dimen/exercise_card_elevation"
android:layout_margin="@dimen/exercise_card_layout_margin" >

<TextView
    android:id="@+id/activity_view_empty_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/margin_huge"
    android:gravity="center"
    android:textStyle="bold" />
</android.support.v7.widget.CardView>