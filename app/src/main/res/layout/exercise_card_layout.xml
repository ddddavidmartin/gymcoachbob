<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:card_view="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          card_view:cardCornerRadius="@dimen/exercise_card_corner_radius"
          android:layout_margin="@dimen/exercise_card_layout_margin"
          android:foreground="?android:attr/selectableItemBackground">

<TextView
    android:id="@+id/exercise_row_item_name_textview"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/exercise_card_item_height"
    android:layout_gravity="top|start" />
<TextView
    android:id="@+id/exercise_row_item_time_since_textview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end" />
</android.support.v7.widget.CardView>